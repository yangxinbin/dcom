<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.mango.leo.dcom.rotor.XunJianActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="巡检"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView_b"
            android:layout_alignStart="@+id/imageView_b"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="30dp"
            android:text="电源线是否正常？"
            android:textSize="@dimen/textSize" />

        <Switch
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:thumb="@drawable/switch_plan_thumb_selector"
            android:track="@drawable/switch_plan_notice_selector" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="30dp"
            android:text="网线是否正常？"
            android:textSize="@dimen/textSize" />

        <Switch
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:thumb="@drawable/switch_plan_thumb_selector"
            android:track="@drawable/switch_plan_notice_selector" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="30dp"
            android:text="指示器是否正常？"
            android:textSize="@dimen/textSize" />

        <Switch
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_s3"
            android:layout_alignBottom="@+id/textView_s3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:thumb="@drawable/switch_plan_thumb_selector"
            android:track="@drawable/switch_plan_notice_selector" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="30dp"
            android:text="巡检说明"
            android:textSize="@dimen/textSize" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ly"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="请描述巡检内容"
            android:lineSpacingExtra="8dp"
            android:padding="8dp" />

        <com.mango.leo.dcom.util.RoundImageView
            android:scaleType="fitXY"
            android:id="@+id/imageView_p"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/editText"
            android:layout_margin="20dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageView_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView_p"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/error" />

        <ImageView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_p"
            android:layout_margin="20dp"
            android:src="@drawable/sure_l" />

        <TextView
            android:id="@+id/textView_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/radioButton1"
            android:layout_toStartOf="@+id/radioButton1"
            android:text="正常"
            android:textColor="@color/green"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/textView_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/radioButton2"
            android:layout_toStartOf="@+id/radioButton2"
            android:text="正常"
            android:textColor="@color/green"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/textView_s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/radioButton3"
            android:layout_toStartOf="@+id/radioButton3"
            android:text="正常"
            android:textColor="@color/green"
            android:textSize="@dimen/textSize" />

        <ImageView
            android:id="@+id/imageView_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_p"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            app:srcCompat="@drawable/pic" />
    </RelativeLayout>
</ScrollView>
